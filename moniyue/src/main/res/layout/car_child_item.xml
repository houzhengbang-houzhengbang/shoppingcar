<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <CheckBox
        android:id="@+id/car_child_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/car_child_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/car_child_item_title"
            android:layout_width="fill_parent"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/car_child_item_Subhead"
            android:layout_width="fill_parent"
            android:layout_height="30dp" />
<!--
        <TextView
            android:id="@+id/tvSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_child_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/car_child_item_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/delete" />

            <TextView
                android:id="@+id/car_child_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="1"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/car_child_item_Add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/add" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/car_child_item_btndelete"
        android:layout_width="54dp"
        android:layout_height="87dp"
        android:text="删除" />
</LinearLayout>